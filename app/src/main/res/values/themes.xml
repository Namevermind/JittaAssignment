<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.JittaAssignment" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.JittaAssignment" parent="Base.Theme.JittaAssignment" />

    <style name="Theme.JittaAssignment.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JittaAssignment.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JittaAssignment.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>